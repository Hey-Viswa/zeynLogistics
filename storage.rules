rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Helper function to check if user is signed in
    function isSignedIn() {
      return request.auth != null;
    }
    
    // Helper function to check if user owns the file
    function isOwner(userId) {
      return request.auth.uid == userId;
    }

    // Profile Images:
    // - Read: Any signed-in user (so drivers/requesters can see each other)
    // - Write: Only the owner
    match /profile_images/{userId}.jpg {
      allow read: if isSignedIn();
      allow write: if isSignedIn() && isOwner(userId);
    }

    // Driver Documents:
    // - Read: Only the owner (privacy)
    // - Write: Only the owner
    match /driver_documents/{userId}/{fileName} {
      allow read, write: if isSignedIn() && isOwner(userId);
    }
    
    // Fallback: Deny everything else
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}
